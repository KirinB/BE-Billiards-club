generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  username  String  @unique
  tokens Token[]
  password    String
  role        Role      @default(STAFF)
  sessions    Session[]
  bills       Bill[]    @relation("StaffBills")
  orders       Order[]    @relation("StaffOrders")
  createdAt   DateTime  @default(now())
}

model Token{
  id  Int @id @default(autoincrement())
  token String
  userId Int
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  type  TokenType
  expiresAt  DateTime?
  revoked Boolean @default(false)
  createdAt   DateTime  @default(now())
  updateAt DateTime @updatedAt
  @@unique([userId, type])
}

enum TokenType {
  REFRESH
  RESET_PASSWORD
}

enum Role {
  ADMIN
  STAFF
}

model Table {
  id                Int           @id @default(autoincrement())
  name              String
  type              TableType
  pricePerHour      Float
  status            TableStatus   @default(AVAILABLE)
  currentSessionId  Int?          @unique
  currentSession    Session?      @relation("CurrentTableSession", fields: [currentSessionId], references: [id])
  sessions          Session[]     @relation("TableSessions")
  createdAt         DateTime      @default(now())
}

model Session {
  id            Int       @id @default(autoincrement())
  tableId       Int
  table         Table     @relation("TableSessions", fields: [tableId], references: [id])
  currentTable  Table?    @relation("CurrentTableSession")
  staffId       Int
  staff         User      @relation(fields: [staffId], references: [id])
  startTime     DateTime  @default(now())
  endTime       DateTime?
  orders      Order[]
  totalAmount   Float     @default(0)
  bill          Bill?
  createdAt     DateTime  @default(now())
}

enum TableType {
  POOL
  CAROM
}

enum TableStatus {
  AVAILABLE
  PLAYING
  RESERVED
}

model Bill {
  id          Int       @id @default(autoincrement())
  sessionId   Int       @unique
  session     Session   @relation(fields: [sessionId], references: [id])
  items       BillItem[]
  totalAmount Float
  createdAt   DateTime  @default(now())
  createdById Int
  createdBy   User      @relation("StaffBills", fields: [createdById], references: [id])
}

model BillItem {
  id          Int       @id @default(autoincrement())
  billId      Int
  bill        Bill      @relation(fields: [billId], references: [id])
  menuItemId  Int
  menuItem    MenuItem  @relation(fields: [menuItemId], references: [id])
  quantity    Int
  price       Float   
}

model Menu {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  menuItems MenuItemOnMenu[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model MenuItem {
  id         Int        @id @default(autoincrement())
  name       String
  price      Float
  categoryId Int?
  category   Category?  @relation(fields: [categoryId], references: [id])
  menus      MenuItemOnMenu[]
  billItems  BillItem[]
  available  Boolean    @default(true)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
deleted   Boolean   @default(false)
  orderItems OrderItem[]
}

model MenuItemOnMenu {
  menuId     Int
  menu       Menu       @relation(fields: [menuId], references: [id])
  menuItemId Int
  menuItem   MenuItem   @relation(fields: [menuItemId], references: [id])

  @@id([menuId, menuItemId])
}

model Category {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  menuItems MenuItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model Order {
  id          Int         @id @default(autoincrement())
  sessionId   Int
  session     Session     @relation(fields: [sessionId], references: [id])
  orderItems  OrderItem[]
  createdById Int
  createdBy   User      @relation("StaffOrders", fields: [createdById], references: [id])
  createdAt   DateTime    @default(now())
}

model OrderItem {
  id          Int         @id @default(autoincrement())
  orderId     Int
  order       Order       @relation(fields: [orderId], references: [id])
  menuItemId  Int
  menuItem    MenuItem    @relation(fields: [menuItemId], references: [id])
  quantity    Int         @default(1)
}

model StoreInfo {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  phone     String
  logo      String?
  vat       Float?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}